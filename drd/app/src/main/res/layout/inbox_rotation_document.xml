<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="title"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="filename"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/del"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_del" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnSign"
            android:layout_width="@dimen/button_rotattion"
            android:layout_height="@dimen/button_rotattion"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_sign" />

        <ImageView
            android:id="@+id/btnStamp"
            android:layout_width="@dimen/button_rotattion"
            android:layout_height="@dimen/button_rotattion"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_stamp" />

        <ImageView
            android:id="@+id/btnRevisi"
            android:layout_width="@dimen/button_rotattion"
            android:layout_height="@dimen/button_rotattion"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_revisi" />

        <ImageView
            android:id="@+id/btnView"
            android:layout_width="@dimen/button_rotattion"
            android:layout_height="@dimen/button_rotattion"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_view" />
    </LinearLayout>

</LinearLayout>